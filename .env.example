# Environment configuration for VocaBloom Backend

# ===================================================
# DJANGO CONFIGURATION
# ===================================================

# Environment mode (development/production)
DJANGO_ENV=development

# Debug mode (True for development, False for production)
DEBUG=True

# Django secret key (generate a new one for production)
SECRET_KEY="your-secret-key-here"

# ===================================================
# DATABASE CONFIGURATION
# ===================================================

# Local development database
LOCAL_DATABASE_URL=postgres://username:password@localhost:5432/vocabloom_development

# Production database (for deployment)
# DATABASE_URL=postgres://username:password@host:port/database_name

# Alternative database configuration (if not using DATABASE_URL)
# DB_NAME=vocabloom_development
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# ===================================================
# AWS CONFIGURATION for Polly Text To Speech
# ===================================================

AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# ===================================================
# GEMINI AI SERVICES for AI-generated examples
# ===================================================

GEMINI_API_KEY=your_gemini_api_key_here

# ===================================================
# OPTIONAL SETTINGS
# ===================================================

# Polly default speech speed (slow, medium, fast, or percentage like 80%)
# POLLY_DEFAULT_SPEED=slow

# Allowed hosts for production (comma-separated)
# ALLOWED_HOSTS=your-domain.com,your-app.onrender.com

# CORS settings for frontend
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com